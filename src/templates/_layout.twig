{% requireAdmin %}

{% extends "_layouts/cp" %}

{% do view.registerAssetBundle("lukeyouell\\gtmetrix\\assetbundles\\gtmetrix\\GTmetrixAsset") %}

{% set navItems = {
	tests: { label: 'Tests'|t, url: url('gtmetrix') },
  settings: { label: 'Settings'|t, url: url('gtmetrix/settings') }
} %}

{% block sidebar %}
	<nav>
		{% include "_includes/nav" with { items: navItems, selectedItem: selectedNavItem } only %}
	</nav>
{% endblock %}
